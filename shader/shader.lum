
Input -> VertexPass : Vector3 modelPosition;
Input -> VertexPass : Color modelColor;

VertexPass -> FragmentPass : Color fragmentColor;

FragmentPass -> Output : Color outputColor;

VertexPass()
{
	pixelPosition = modelPosition;
	fragmentColor = modelColor;
}

FragmentPass()
{
	if (fragmentColor.a == 0)
		discard;

	outputColor = fragmentColor;
}
