Input       -> VertexPass:   Vector2 vertexPosition;
Input       -> VertexPass:   Vector2 vertexUV;
VertexPass  -> FragmentPass: Vector2 fragUV;
FragmentPass-> Output:       Color   pixelColor;

Texture mainTexture;

VertexPass()
{
    Vector4 clip = Vector4(vertexPosition, 0.0, 1.0);

    pixelPosition = clip;
    fragUV = vertexUV;
}

FragmentPass()
{
    pixelColor = mainTexture.getPixel(fragUV);
}
