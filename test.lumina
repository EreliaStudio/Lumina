#include <ViewRegionConstant>

Input      -> VertexPass: Vector2Int modelPosition;
FragmentPass -> Output: Color pixelColor;

VertexPass()
{
	Vector4 screenPosition = Vector4(modelPosition, 0, 1.0);
	Vector4 convertedPosition = spk::ViewRegionConstant.screenToOpenGLMatrix * screenPosition;

	pixelPosition = convertedPosition;
}

FragmentPass()
{
	Color colorArray[8] = {
		Color(1, 0, 0, 1),
		Color(0, 1, 0, 1),
		Color(0, 0, 1, 1),
		Color(1, 1, 0, 1),
		Color(1, 0, 1, 1),
		Color(0, 1, 1, 1),
		Color(1, 1, 1, 1),
		Color(0.5, 0.5, 0.5, 1)
	};
	pixelColor = colorArray[TriangleID % 8];
}
