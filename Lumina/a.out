## VERTEX SHADER CODE ##
#version 450

layout (location = 0) in vec2 modelPosition;
layout (location = 0) out int instanceID;

void main()
{
    instanceID = gl_InstanceID;
    gl_Position = vec4(modelPosition, 0, 1);
}

## FRAGMENT SHADER CODE ##
#version 450

layout (location = 0) in int instanceID;
layout (location = 0) out vec4 pixelColor;

void main()
{
    if (instanceID == 0)
    {
        pixelColor = vec4(1, 0, 0, 1);
    }
    else
    {
        pixelColor = vec4(0, 1, 0, 1);
    }
}

