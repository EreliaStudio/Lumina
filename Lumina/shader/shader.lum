#include <screen_constants>
     
Input -> VertexPass : Vector2Int modelPosition;

AttributeBlock self
{
    Color color;
    float layer;
};

VertexPass()
{
    pixelPosition = spk::ScreenConstants.canvasMVP * Vector4(modelPosition, self.layer, 1.0f);
}

FragmentPass()
{
    pixelColor = self.color;
}