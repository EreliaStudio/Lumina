Input -> VertexPass : Vector2 modelPosition;
Input -> VertexPass : Vector2 modelUV;
VertexPass -> FragmentPass : Vector2 fragmentUV;

AttributeBlock properties
{
    Color color;
};

Texture texture;

VertexPass()
{
    pixelPosition = Vector4(modelPosition, 0.0, 1.0);
    fragmentUV = modelUV;
}

FragmentPass()
{
    Vector2 tmpUv = fragmentUV;
    pixelColor = getPixel(texture, Vector2(tmpUv.x, tmpUv.y));
}