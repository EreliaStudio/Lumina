Input -> VertexPass : Vector2 modelPosition;

AttributeBlock ColorAttributes
{
	Color values[3];
};

VertexPass()
{
    pixelPosition = Vector4(modelPosition, 0, 1);
}

FragmentPass()
{
	pixelColor = Color(ColorAttributes.values[0].r, ColorAttributes.values[1].g, ColorAttributes.values[2].b, 1.0f);
}