Input -> VertexPass : Vector2 modelPosition;
Input -> VertexPass : Vector2 modelUVs;
VertexPass -> FragmentPass : Vector2 fragmentUVs;

Texture myTexture;

// Define the vertex shader stage
VertexPass()
{
	pixelPosition = Vector4(modelPosition, 0, 1);
	fragmentUVs = modelUVs + Vector2(5, 5);
}

// Define the fragment shader stage
FragmentPass()
{
	pixelColor = myTexture.getPixel(fragmentUVs);
}
